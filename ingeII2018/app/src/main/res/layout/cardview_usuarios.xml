<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_cardView_clientes"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="@dimen/margenes_cardView"
    android:layout_marginRight="@dimen/margenes_cardView"
    android:layout_marginTop="@dimen/margenes_cardView"

    android:id="@+id/cardview_item_carga">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2.5">


        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/usuario_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:text="Nombre Item" />



        <ImageButton
            android:id="@+id/editar_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit"
            android:elevation="@dimen/cardview_default_elevation"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/eliminar_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
    android:src="@drawable/ic_delete"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_gravity="center"/>


    </LinearLayout>


    </android.support.v7.widget.CardView>